<configuration debug="true">
  <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener"/>

  <property name="CONSOLE_KNOTX_LOG_PATTERN"
    value="%d{${KNOTX_LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}} [%thread] %-5level %logger{36} - %msg%n"/>

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${CONSOLE_KNOTX_LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <root level="TRACE" additivity="false">
    <appender-ref ref="CONSOLE"/>
  </root>

  <logger name="io.netty" level="ERROR" additivity="false"/>
  <logger name="io.vertx" level="ERROR" additivity="false"/>

  <logger name="io.knotx" level="TRACE" additivity="true">
    <appender-ref ref="CONSOLE"/>
  </logger>

</configuration>